}

.customers-header h2 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1a202c;
}

.customers-actions {
    display: flex;
    gap: 0.5rem;
}

.customers-filters {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #ffffff;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
    align-items: center;
}

.filter-group {
    flex: 1;
}

.filter-group:last-child {
    flex: 0 0 auto;
}

.customers-stats {
    margin-bottom: 2rem;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
}

.stat-card {
    background: #ffffff;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid #e2e8f0;
    text-align: center;
}

.stat-value {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1a202c;
