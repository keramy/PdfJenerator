}

/* Modal Enhancements */
.form-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.form-grid .full-width {
    grid-column: 1 / -1;
}

/* Toast Notifications */
.toast {
    position: fixed;
    top: 2rem;
    right: 2rem;
    background: #ffffff;
    color: #1a202c;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    border-left: 4px solid #4299e1;
    transform: translateX(100%);
    transition: all 0.3s ease;
    z-index: 10001;
    max-width: 400px;
    word-wrap: break-word;
}

.toast.show {
    transform: translateX(0);
}

.toast.toast-success {
    border-left-color: #48bb78;
}

.toast.toast-error {
    border-left-color: #f56565;
}

.import-info {
    margin: 1rem 0;
    padding: 1rem;
    background: #f7fafc;
    border-radius: 6px;
    border: 1px solid #e2e8f0;
}

.import-info p {
    margin: 0;
    font-size: 0.875rem;
    color: #4a5568;
}

/* Responsive Design for Customers */
@media (max-width: 768px) {
    .customers-container {
        padding: 1rem;
    }
    
    .customers-header {
        flex-direction: column;
        align-items: stretch;
        gap: 1rem;
    }
    
    .customers-actions {
        justify-content: center;
    }
    
    .customers-filters {
        flex-direction: column;
        gap: 0.75rem;
    }
    
    .customers-grid {
        grid-template-columns: 1fr;
    }
    
    .customer-card-header {
        flex-direction: column;
        gap: 1rem;
    }
    
    .customer-actions {
        justify-content: center;
    }
    
    .form-grid {
        grid-template-columns: 1fr;
    }
    
    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

/* Print Styles */
@media print {
    .nav-tabs,
    .order-actions,
    .header-actions {
        display: none !important;
    }
    
    .app-container {
        box-shadow: none;
    }
    
    .card {
        box-shadow: none;
        border: 1px solid #ccc;
    }
}