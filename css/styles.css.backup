}

.customer-card-header {
    padding: 1rem;
    border-bottom: 1px solid #e2e8f0;
    display: flex;
    justify-content: space-between;
    align-items: start;
}

.customer-info h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 0.25rem;
}

.customer-code {
    font-size: 0.75rem;
    color: #718096;
    font-weight: 500;
    background: #f7fafc;
    padding: 0.25rem 0.5rem;
