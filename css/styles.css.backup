    color: #4a5568;
}

.customer-card-body p:last-child {
    margin-bottom: 0;
}

.customer-email, .customer-phone, .customer-address {
    word-break: break-word;
}

.customer-notes {
    background: #f7fafc;
    padding: 0.75rem;
    border-radius: 4px;
    border-left: 3px solid #4299e1;
    margin: 0.5rem 0;
}

.customer-stats {
    display: flex;
    gap: 1rem;
    margin: 1rem 0;
    font-size: 0.75rem;
}

.customer-stats .stat {
    color: #718096;
}

.customer-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    margin-top: 0.5rem;
}

.tag {
    background: #4299e1;
    color: #ffffff;
    font-size: 0.625rem;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-weight: 500;
}

.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    background: #ffffff;
